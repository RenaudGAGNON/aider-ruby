# Environment variables for AiderRuby
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default model
AIDER_MODEL=claude-3-5-sonnet-20241022

# Output settings
AIDER_DARK_MODE=true
AIDER_PRETTY=true
AIDER_STREAM=true

# Git settings
AIDER_GIT=true
AIDER_AUTO_COMMITS=true
AIDER_DIRTY_COMMITS=false

# Linting and testing
AIDER_LINT=true
AIDER_AUTO_LINT=true
AIDER_TEST=true
AIDER_AUTO_TEST=true

# Other settings
AIDER_VERBOSE=false
AIDER_YES_ALWAYS=false
AIDER_CHAT_LANGUAGE=fr
AIDER_COMMIT_LANGUAGE=fr
AIDER_ENCODING=utf-8
AIDER_LINE_ENDINGS=platform
AIDER_SUGGEST_SHELL_COMMANDS=true
AIDER_FANCY_INPUT=true
AIDER_MULTILINE=false
AIDER_NOTIFICATIONS=false
AIDER_DETECT_URLS=true

# Voice settings
AIDER_VOICE_FORMAT=wav
AIDER_VOICE_LANGUAGE=en

# Analytics (optional)
AIDER_ANALYTICS=false
POSTHOG_API_KEY=your_posthog_api_key_here
